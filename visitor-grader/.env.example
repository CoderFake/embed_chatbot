# Service
SERVICE_NAME=visitor-grader
LOG_LEVEL=INFO

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
VISITOR_GRADER_QUEUE_NAME=visitor_grading_queue
MAX_CONCURRENT_TASKS=10

# Backend Webhook
BACKEND_WEBHOOK_URL=http://backend:8000/api/v1/webhooks/visitor-grading
BACKEND_WEBHOOK_SECRET=your-webhook-secret-key-change-in-production
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3

# LLM Provider (openai, gemini, ollama)
LLM_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# Scoring Thresholds
HIGH_SCORE_THRESHOLD=70
MEDIUM_SCORE_THRESHOLD=40
